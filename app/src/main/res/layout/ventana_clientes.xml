<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#44c760">



    <TextView
        android:id="@+id/textoBienvenida"
        android:layout_width="341dp"
        android:layout_height="162dp"
        android:fontFamily="@font/comic_neue"
        android:text="Bienvenido"
        android:textColor="#000000"
        android:textSize="34dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.114" />

    <TextView
        android:id="@+id/textoUbicarDia"
        android:layout_width="127dp"
        android:layout_height="26dp"
        android:fontFamily="@font/comic_neue"
        android:text="Hoy estamos a:"
        android:textSize="18dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.053"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textoBienvenida"
        app:layout_constraintVertical_bias="0.29" />

    <CalendarView
        android:id="@+id/calendario"
        android:layout_width="241dp"
        android:layout_height="225dp"
        android:layout_marginStart="7dp"
        android:layout_marginTop="44dp"
        android:layout_marginEnd="35dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/textoUbicarDia"
        app:layout_constraintTop_toBottomOf="@+id/textoBienvenida"
        app:layout_constraintVertical_bias="0.055" />

    <TextView
        android:id="@+id/fechaEscogida"
        android:layout_width="181dp"
        android:layout_height="44dp"
        android:layout_marginStart="147dp"
        android:layout_marginTop="142dp"
        android:layout_marginEnd="206dp"
        android:layout_marginBottom="61dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/calendario" />
</androidx.constraintlayout.widget.ConstraintLayout>